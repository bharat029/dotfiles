# conda_env="\$([ ! -z \"\$CONDA_DEFAULT_ENV\" ] && echo \"(\${CONDA_DEFAULT_ENV}) \")"
function conda_env() {
	[ ! -z "$CONDA_DEFAULT_ENV" ] && echo "($CONDA_DEFAULT_ENV) "
}

PS1="\n"
PS1+="\[\033[01;35m\]\$(conda_env)\[\033[00m\]"
PS1+="\[\033[01;32m\]\u@\h\[\033[00m\]: "
PS1+="\[\033[00;34m\]\W\[\033[00m\] "
PS1+="\[\033[01;36m\]\@\[\033[00m\] "
PS1+="\n\$ "
