#!/bin/bash

# Make directory and move inside
mkd() {
  mkdir -p "$@" && cd "$_"
}

# Find aliases
falias() {
  local i=-1
  
  if (( $# > 0 )); then
    local aliases="$(alias | grep $1)"
  else
    local aliases="$(alias)"
  fi

  aliases="$(echo \"$aliases\" | sed 's/alias /\n/g')"

  echo -e "$aliases" | while read line; do
    local a=$(echo "$line" | cut -d "=" -f 1)
    local v=$(echo "$line" | cut -d "=" -f 2-)
    (( ++i > 0 )) && printf "%2d\t%-6s -> %s\n" $i "$a" "$v"
  done 
}

# Find git aliases
galias() {
  local i=-1

  if (( $# > 0 )); then
    local aliases="$(git aliases | grep $1)"
  else
    local aliases="$(git aliases)"
  fi

  aliases="$(echo \"$aliases\" | sed 's/alias./\n/g')"

  echo -e "$aliases" | while read line; do
    local a=$(echo "$line" | cut -d " " -f 1)
    local v=$(echo "$line" | cut -d " " -f 2-)
    [ ! -z $a ] && (( ++i > 0 )) && printf "%2d\t%-3s -> %s\n" $i "$a" "$v"
  done 
}
